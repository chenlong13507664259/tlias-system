<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Mapper.ClazzMapper">


    <!-- 分页查询 -->
    <select id="ClazzPage" resultType="com.example.Entity.Clazz">
        SELECT * FROM tlias.clazz
        <where>
            <if test="name != null and name != ''">
                AND name like concat('%',#{name},'%')
            </if>
            <if test="begin_date != null">
                AND begin_date >= #{begin_date}
            </if>
            <if test="end_date != null">
                AND end_date &lt;= #{end_date}
            </if>
        </where>
        LIMIT #{start}, #{pageSize}
    </select>

    <!-- 查询总记录数 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM tlias.clazz
        <where>
            <if test="name != null and name != ''">
                AND name like concat('%',#{name},'%')
            </if>
            <if test="begin_date != null">
                AND begin_date >= #{begin_date}
            </if>
            <if test="end_date != null">
                AND end_date &lt;= #{end_date}
            </if>
        </where>
    </select>

</mapper>